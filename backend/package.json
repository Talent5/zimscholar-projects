{
  "name": "scholarxafrica-backend",
  "version": "1.0.0",
  "description": "Backend server for ScholarXafrica",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "start": "node server.js",
    "build": "echo 'No build step required for Node.js backend'",
    "dev": "node --watch server.js",
    "start:prod": "NODE_ENV=production node server.js",
    "pm2:start": "pm2 start server.js --name scholarxafrica-backend",
    "pm2:stop": "pm2 stop scholarxafrica-backend",
    "pm2:restart": "pm2 restart scholarxafrica-backend",
    "pm2:logs": "pm2 logs scholarxafrica-backend",
    "seed:services": "node seedServices.js",
    "seed:pricing": "node seedPricing.js",
    "seed:customers": "node seedCustomers.js",
    "seed:all": "npm run seed:services && npm run seed:pricing && npm run seed:customers"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.90.1",
    "bcryptjs": "^3.0.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^8.2.1",
    "jsonwebtoken": "^9.0.3",
    "mongoose": "^8.0.0",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.7",
    "pdfkit": "^0.17.2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21"
  }
}
